{
  "name": "@opuscapita/fsm-workflow",
  "private": true,
  "license": "Apache-2.0",
  "devDependencies": {
    "lerna": "2.8.0",
    "junit-merge": "1.2.3"
  },
  "scripts": {
    "add-depenency": "lerna add",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "diff": "lerna diff",
    "lint": "lerna run lint",
    "postinstall": "npm run bootstrap",
    "start": "lerna run start --parallel",
    "updated": "lerna updated || exit 0",
    "publish": "lerna publish --exact --cd-version patch --skip-git --yes",
    "test": "lerna run test --parallel && junit-merge -r packages/**/test-results.xml",
    "publish-release": "lerna publish --exact --cd-version patch --yes --skip-git"
  },
  "engines": {
    "node": ">= 8.x"
  }
}
