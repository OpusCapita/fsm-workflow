{
  "name": "@opuscapita/fsm-core",
  "version": "0.0.1-beta.0",
  "description": "FSM workflow (for Node.js)",
  "main": "index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config config/webpack.config.js",
    "lint": "eslint src",
    "publish-release": "update-changelog -- --all && npm run build && npm-publish --release",
    "test-only": "mocha src/**/*.spec.js --require config/mocha-setup.js",
    "test": "rimraf ./.nyc_output ./coverage && cross-env nyc --reporter=lcov --reporter=text mocha --require config/mocha-setup.js --recursive 'src/**/*.spec.js'"
  },
  "repository": "https://github.com/OpusCapita/fsm/tree/master/core",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "author": "Alexey Sergeev <sab@scand.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/OpusCapita/fsm/issues"
  },
  "homepage": "https://github.com/OpusCapita/fsm/tree/master/core#readme",
  "dependencies": {
    "bluebird": "3.5.0"
  },
  "devDependencies": {
    "@opuscapita/npm-scripts": "2.0.0-beta.2",
    "babel-core": "6.24.0",
    "babel-eslint": "6.1.2",
    "babel-loader": "6.4.1",
    "babel-plugin-istanbul": "4.1.4",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babel-register": "6.24.1",
    "cross-env": "5.0.1",
    "eslint": "3.12.2",
    "eslint-config-opuscapita": "1.0.3",
    "eslint-plugin-react": "6.8.0",
    "mocha": "3.3.0",
    "mocha-junit-reporter": "1.13.0",
    "nyc": "11.0.2",
    "rimraf": "2.6.1",
    "webpack": "3.0.0"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "**/*.spec.js"
    ],
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  }
}
