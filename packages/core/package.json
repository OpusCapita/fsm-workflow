{
  "name": "@opuscapita/fsm-workflow-core",
  "version": "1.0.0",
  "description": "FSM workflow (for Node.js)",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "eslint src",
    "test-only": "mocha src/**/*.spec.js --require config/mocha-setup.js",
    "test": "rimraf ./.nyc_output ./coverage && cross-env nyc mocha --reporter=mocha-junit-reporter --require config/mocha-setup.js --recursive \"src/**/*.spec.js\"",
    "build": "rimraf lib && babel --copy-files --no-babelrc --presets es2015,stage-0 --ignore *.spec.js src --out-dir lib",
    "prepare": "npm run build",
    "prepack": "npm run build"
  },
  "repository": "https://github.com/OpusCapita/fsm/tree/master/packages/core",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "author": "Alexey Sergeev <sab@scand.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/OpusCapita/fsm/issues"
  },
  "homepage": "https://github.com/OpusCapita/fsm/tree/master/core#readme",
  "dependencies": {
    "bluebird": "3.5.0"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.25.0",
    "babel-eslint": "7.2.3",
    "babel-plugin-istanbul": "4.1.4",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "babel-register": "6.26.0",
    "cross-env": "5.0.5",
    "eslint": "3.19.0",
    "eslint-config-opuscapita": "1.0.9",
    "eslint-plugin-react": "7.1.0",
    "mocha": "3.5.0",
    "mocha-junit-reporter": "1.13.0",
    "nyc": "11.1.0",
    "rimraf": "2.6.1"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "**/*.spec.js"
    ],
    "check-coverage": true,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  }
}
